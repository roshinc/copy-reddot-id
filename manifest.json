{
  "name": "Copy RedDot ID",
  "description": "Copys the ID of the current RedDot page",
  "version": "0.0.1",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Copy ID!"
  },
  "icons": {
    "128": "images/128.png",
    "16": "images/16.png",
    "48": "images/48.png"
  },
  "manifest_version": 2
}
